<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/themeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dividerHeight="@dimen/keyboard_theme_list_divider_height"
        android:paddingBottom="@dimen/keyboard_theme_image_padding_bottom"
        android:paddingTop="@dimen/keyboard_theme_image_padding_top"
        android:scaleType="center"
        android:src="@drawable/ime_keypad_thumbnail" />

    <ListView
        android:id="@+id/themeList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:choiceMode="singleChoice"
        android:dividerHeight="@dimen/keyboard_theme_list_divider_height"
        android:fadingEdge="none"
        android:scrollingCache="false" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ab_command_holo_light" >

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/keyboard_theme_button_height"
            android:layout_weight="1"
            android:layout_marginTop = "@dimen/keyboard_theme_button_margin_edge"
            android:layout_marginBottom = "@dimen/keyboard_theme_button_margin_edge"
            android:layout_marginLeft = "@dimen/keyboard_theme_button_margin_edge"
            android:layout_marginRight = "@dimen/keyboard_theme_button_margin_center"
            android:background="@drawable/btn_command_light"
            android:text="@string/ti_dialog_button_cancel_txt" />

        <Button
            android:id="@+id/applyButton"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/keyboard_theme_button_height"
            android:layout_weight="1"
            android:layout_marginTop = "@dimen/keyboard_theme_button_margin_edge"
            android:layout_marginBottom = "@dimen/keyboard_theme_button_margin_edge"
            android:layout_marginLeft = "@dimen/keyboard_theme_button_margin_center"
            android:layout_marginRight = "@dimen/keyboard_theme_button_margin_edge"
            android:background="@drawable/btn_command_light"
            android:text="@string/ti_dialog_button_ok_txt" />
    </LinearLayout>

</LinearLayout>