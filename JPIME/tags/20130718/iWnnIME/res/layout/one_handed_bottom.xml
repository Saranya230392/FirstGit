<!-- one handed layout bottom -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/onehand_bottom"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="0dip"
    android:orientation="vertical"
    android:background="@drawable/ime_one_hand_bg_width">
    <ImageView
        android:id="@+id/onehand_bottom_imageview"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/one_handed_keybord_view_height"
        android:src="@drawable/ime_one_hand_btn_down_normal"
        android:scaleType="center"
        android:clickable="true"/>
</LinearLayout>

