<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:iwnn="http://schemas.android.com/apk/res/jp.co.omronsoft.iwnnime.ml"
     >
  <switch>
    <!-- Voice On -->
    <!-- Hiragana -->
    <case iwnn:keyboardCondition="modeHiragana|voiceOn">
      <Row-Key>
        <Key iwnn:codes="65311"
             iwnn:keyIcon="@drawable/key_qwerty_full_question" iwnn:keyPreviewLabel="\?"
             iwnn:popupKeyboard="@xml/keyboard_popup_template"
             iwnn:popupCharacters="@string/ti_alternates_maru_jajp_qwerty_ja_shift_on_txt" />
      </Row-Key>
    </case>

    <!-- Full Alphabet -->
    <case iwnn:keyboardCondition="modeFullAlpha|voiceOn">
      <Row-Key>
        <Key iwnn:codes="65311"
             iwnn:keyIcon="@drawable/key_qwerty_half_question" iwnn:keyPreviewLabel="\?"
             iwnn:popupKeyboard="@xml/keyboard_popup_template"
             iwnn:popupCharacters="@string/ti_alternates_maru_jajp_qwerty_en_full_alphabet_shift_on_txt" />
      </Row-Key>
    </case>

    <!-- Full Katakana -->
    <case iwnn:keyboardCondition="modeFullKatakana|voiceOn">
      <Row-Key>
        <Key iwnn:codes="65311"
             iwnn:keyIcon="@drawable/key_qwerty_full_question" iwnn:keyPreviewLabel="\?"
             iwnn:popupKeyboard="@xml/keyboard_popup_template"
             iwnn:popupCharacters="@string/ti_alternates_maru_jajp_qwerty_ja_full_katakana_shift_on_txt" />
      </Row-Key>
    </case>

    <!-- Half Alphabet -->
    <case iwnn:keyboardCondition="modeHalfAlpha|voiceOn">
      <Row-Key>
        <Key iwnn:codes="63"
             iwnn:keyIcon="@drawable/key_qwerty_half_question" iwnn:keyPreviewLabel="\?"
